{% extends 'base.html.twig' %}

{% block title %}BlogPost index{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">BlogPost index</h1>

        <div {{ turbo_stream_listen('blog_listing') }}></div>
        <table class="table-auto w-full text-left whitespace-nowrap">
            <thead>
            <tr class="bg-gray-200 text-gray-600 uppercase text-xs tracking-wider font-semibold">
                <th class="p-2">Id</th>
                <th class="p-2">Title</th>
                <th class="p-2">Content</th>
                <th class="p-2">Place</th>
                <th class="p-2">Actions</th>
            </tr>
            </thead>
            <tbody id="my-fancy-table">
            {% for blog_post in blog_posts %}
                {% include "blog_post/_row.html.twig" %}
            {% else %}
                <tr>
                    <td colspan="4" class="p-4 text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="mt-4">
            <a href="{{ path('app_blog_post_new') }}" class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700">Create new</a>
        </div>
    </div>
{% endblock %}

